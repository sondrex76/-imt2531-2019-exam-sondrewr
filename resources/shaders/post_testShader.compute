layout(local_size_x = 8, local_size_y = 8) in;

layout(rgba32f, binding = 0) uniform image2D litMap;

void main() {
	ivec2 texturePos = ivec2(gl_GlobalInvocationID.xy);
	vec4 inColor = imageLoad(litMap, texturePos).rgba;

	// tint the color
	inColor.rgb *= vec3(1., 0.1, 0.1);

	imageStore(litMap, texturePos, inColor);
}